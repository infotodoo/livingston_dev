<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_tracking" model="ir.ui.view">
        <field name="name">stock.picking.tracking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="button_validate" position="after">
                    <button name="validation_tracking" attrs="{'invisible': ['|', ('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False)]}" string="Validate" type="object" class="oe_highlight"/>
            </button>
        </field>
    </record>
</odoo>