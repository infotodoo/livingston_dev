<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sitrac_interface_form" model="ir.ui.view">
            <field name="name">sitrac.interface.form</field>
            <field name="model">sitrac.interface</field>
            <field name="arch" type="xml">
                <form string="Sitrac Interface">
                    <sheet style="background-color:lightgreen">
                        <group>
                            <field name="name"/>
                        </group>
                        <div class="o_row">
                            <label for="date_import" string="Date Import"/>
                            <field name="date_import"/>
                            <label for="production_id" string="Production Order"/>
                            <field name="production_id"/>
                        </div>
                    </sheet>
                    <sheet>
                        <group>
                            <field name="sitrac_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </group>
                        <footer><button name="cargar" type="object" string="Cargar"/></footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_sitrac_interface">
            <field name="name">Sitrac Interface</field>
            <field name="res_model">sitrac.interface</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.module.category" id="module_category_sitrac_interface">
            <field name="name">Sitrac Interface</field>
            <field name="description">Helps you manage Sitrac.</field>
        </record>
         <record id="group_sitrac_interface_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_sitrac_interface"/>
        </record>
    </data>
</odoo>
