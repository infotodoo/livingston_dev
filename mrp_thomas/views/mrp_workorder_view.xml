<odoo>
    <data>
        <record id="view_mrp_workorder_form" model="ir.ui.view">
            <field name="name">view.mrp.workorder.form</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='time_ids']/tree/field[@name='loss_id']" position="attributes">
                    <attribute name="string">Activity Name</attribute>
                </xpath>
                <xpath expr="//field[@name='time_ids']/tree/field[@name='loss_id']" position="before">
                    <field name="activity_vat"/>
                    <field name="activity_code"/>
                </xpath>
                <xpath expr="//field[@name='time_ids']/form/group/group[2]/field[@name='loss_id']" position="attributes">
                    <attribute name="string">Activity Name</attribute>
                </xpath>
                <xpath expr="//field[@name='time_ids']/form/group/group[2]/field[@name='loss_id']" position="before">
                    <field name="activity_vat"/>
                    <field name="activity_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>