<odoo>
    <data>
        <record id="view_distribution_search" model="ir.ui.view">
            <field name="name">report.distribution.assessment.search</field>                                
            <field name="model">report.distribution.assessment</field>                                
            <field name="arch" type="xml">
                <search string="distribution_filter">
                    <filter name="company_id" context="{'group_by':'company_id'}" string="Company"/>
                    <filter name="wokcenter" context="{'group_by':'name'}" string="Workcenter"/>
                </search>
            </field>
        </record>
        <record id="distribution_assessment_report_view_tree" model="ir.ui.view">
            <field name="name">distribution.assessment.report.view.tree</field>
             <field name="type">tree</field>
            <field name="model">report.distribution.assessment</field>
            <field name="arch" type="xml">
                <tree string="Distribution Assessment" create="0" edit="0">
                   <field name="company_id"/>
                   <field name="code"/>
                   <field name="name"/>
                   <field name="date_end"/>
                   <field name="hours"/>
                   <field name="percentage"/>
                   <field name="management"/>
                   <field name="laboratory"/>
                   <field name="dispatch"/>
                   <field name="maintenance"/>
                   <field name="disused_assets"/>
                   <field name="alternative_center"/>
                   <field name="plan_department_id"/>
                   <field name="shipping_department_id"/>
                   <field name="plant_maintenance_id" /> 
                   <field name="plant_overhead_id" />
                   <field name="transport_id"/>
                   <field name="rm_id"/> 
                   <field name="plant_support_id"/>
                   <field name="proyect_id"/>
                   <field name="warehouse_distribution_id"/> 
                   <field name="prepress_id"/>
                   <field name="supplies_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_report_distribution_assessment_tree">
            <field name="name">Distribution Assessment Report</field>
            <field name="res_model">report.distribution.assessment</field>
            <field name="view_id" ref="distribution_assessment_report_view_tree"/>
            <field name="context">{'group_by':'name'}</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_distribution_search"/>
        </record>
        <record id="report_distribution_assessment_rule" model="ir.rule">
            <field name="name">Distribution Assessment</field>
            <field name="model_id" ref="model_report_distribution_assessment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id','in',company_ids)]</field>
        </record>
    </data>
</odoo>
