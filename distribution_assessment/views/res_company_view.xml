<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_company_inherited" model="ir.ui.view">
            <field name="name">res.company.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="accounts" string="Accounts">
                        <group>
                            <group>
                                <field name="management_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="laboratory_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="dispatch_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            </group>
                            <group>
                                <field name="maintenance_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="disused_assets_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="alternative_center_id" options="{'no_create': True, 'no_create_edit':True}"/> 
                            </group>
                            <group>
                                <field name="plan_department_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="shipping_department_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="plant_maintenance_id" options="{'no_create': True, 'no_create_edit':True}"/> 
                            </group>
                             <group>
                                <field name="plant_overhead_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="transport_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="rm_id" options="{'no_create': True, 'no_create_edit':True}"/> 
                            </group>
                             <group>
                                <field name="plant_support_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="proyect_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="warehouse_distribution_id" options="{'no_create': True, 'no_create_edit':True}"/> 
                            </group>
                            <group>
                                <field name="prepress_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="supplies_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
