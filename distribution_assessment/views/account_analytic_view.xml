<odoo>
    <data>
        <record id="view_account_analytic_tag_inherited" model="ir.ui.view">
            <field name="name">account.analytic.tag.inherit</field>
            <field name="model">account.analytic.tag</field>
            <field name="inherit_id" ref="analytic.account_analytic_tag_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/group[1]/field[@name='name']" position="after">
                    <field name="fiscal_id"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/field[@name='analytic_distribution_ids']/tree[1]/field[@name='percentage']" position="attributes">
                    <attribute name="string">Real Percentage</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/field[@name='analytic_distribution_ids']/tree[1]/field[@name='percentage']" position="before">
                    <field name="suggested_percentage"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>