<odoo>
    <data>
        <record id="pyg_report_view_tree" model="ir.ui.view">
            <field name="name">pyg.report.product.line.view.tree</field>
            <field name="model">zpp.report</field>
            <field name="arch" type="xml">
                <tree string="ZPP">
                    <field name="report_name"/>
                    <field name="start_date"/>
                    <field name="final_date"/>
                </tree>
            </field>
        </record>
        <record id="pyg_report_view_form" model="ir.ui.view">
            <field name="name">pyg.report.product.line.view.form</field>
            <field name="model">zpp.report</field>
            <field name="arch" type="xml">
                <form string="ZPP">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" string=" Report" icon="fa-pencil-square-o" name="report">
                            </button>
                        </div>
                        <group name='head'>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only" string="Report Name"/>
                                <h1>
                                    <field name="report_name" required="True"/>
                                </h1>
                            </div>
                        </group>
                        <group name='date'>
                            <label for="start_time" string="Rango de Fechas"/>
                            <div class="o_row">
                                <field name="start_date"/>
                                <strong> a </strong>
                                <field name="final_date"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="pyg_report_action">
            <field name="name">PYG Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zpp.report</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="view_id" ref="pyg_report_view_tree"/>-->
        </record>
        <record id="zpp_report_view_tree" model="ir.ui.view">
            <field name="name">zpp.report.product.line.view.tree</field>
            <field name="model">zpp.report.line</field>
            <field name="arch" type="xml">
                <tree string="ZPP lines">
                    <field name="id" invisible="1"/>
                    <field name="product_id"/>
                    <field name="description"/>
                    <field name="name"/>
                    <field name="product_qty"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>