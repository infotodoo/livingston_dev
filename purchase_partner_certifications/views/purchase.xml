<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
    <record id="purchase_order_form_inherited_purchase_distribution" model="ir.ui.view">
        <field name="name">purchase.order.form.purchase.distribution</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="distribution_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible': [('bool', '=', True)]}"/>
                <field name="bool" invisible="1"/>
            </xpath>
        </field>
    </record>
     <record model="ir.actions.act_window" id="action_purchase_distribution">
            <field name="name">Distribution</field>
            <field name="res_model">purchase.distribution</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="purchase_distribution" name="Distribution" parent="purchase.menu_purchase_config" sequence="100"
                  action="action_purchase_distribution"/>
   </data>
</odoo>

              
       


