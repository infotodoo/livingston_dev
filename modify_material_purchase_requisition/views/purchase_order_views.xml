
<odoo>
    <data>
        <!-- purchase.order inherit form view -->
        <record id="purchase_order_form_inherited_requisition" model="ir.ui.view">
            <field name="name">purchase.order.form.inherited.requisition</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="purchase_type" attrs="{'readonly': [('state','!=','draft')]}"/>
                    <field name="charge_to" attrs="{'readonly': [('origin','!=',False)]}"/>
                    <field name="production_id" readonly="1"/>
                </field>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="go_to_requisition"
                            string="RequisiciÃ³n"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                            attrs="{'invisible': [('custom_requisition_id','=',False)]}">
                    </button>
                    <field name="custom_requisition_id" invisible="1"/>
                </xpath>
                <field name="user_id" position="attributes">
                    <attribute name="string">Elaborado por</attribute>
                </field>
                <field name="fiscal_position_id" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <field name="date_order" position="after">
                    <field name="date_end" attrs="{'readonly':[('origin','!=',False)]}"/>
                </field>
                <field name="date_order" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <xpath expr="//sheet/notebook//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <!-- <field name="item" attrs="{'readonly':[('state','!=','draft')]}"/> -->
                    <field name="item"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="attrs">{'invisible': [('origin','=',False)], 'readonly':[('origin','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','!=','draft')]}</attribute>
                </xpath>
                <xpath expr="//sheet/notebook//field[@name='order_line']/tree/field[@name='account_analytic_id']" position="attributes">
                    <attribute name="required">True</attribute>
                    <attribute name="optional">show</attribute>
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//sheet/notebook//field[@name='order_line']/tree/field[@name='analytic_tag_ids']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//sheet/notebook//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <!-- <xpath expr="//sheet/notebook//field[@name='order_line']/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath> -->
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('origin','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='code_access_groups']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_requisition_inherited_requisition" model="ir.ui.view">
            <field name="name">purchase.order.requisition.inherited.requisition</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase_requisition.purchase_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('parent_id','=',False),'|',('company_id','=',company_id),('company_id','=',False)]</attribute>
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
            </field>
        </record>


        <!-- purchase.order inherit tree view -->
        <record id="purchase_order_tree_date_end" model="ir.ui.view">
            <field name="name">purchase.order.inherit.view.tree.date.end</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="date_end"/>
                </field>
            </field>
        </record>
    </data>
</odoo>