<?xml version="1.0" encoding="utf-8"?>
<openerp>
  	<data>
		<template id="account_sign_up_details_id" inherit_id="website_sale.address">
	      <xpath expr="//div[@class='w-100']" position="after">
	          	<div class="form-group field-name">
	                <label for="birthday" class="control-label">Your Birthday</label>
	                <input type="date" name="wk_dob" t-att-value="wk_dob" id="birthday" class="form-control" 
	                required="required" t-att-readonly="'readonly' if only_passwords else None"
	                t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            	</div>
	      </xpath>
	   	</template>
  	</data>
 </openerp>